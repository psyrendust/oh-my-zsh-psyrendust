[core]
  hidedotfiles = false
  excludesfile = ~/.gitignore_global
  editor = subl -n -w
  filemode = false
  trustctime = false
[http]
  sslVerify = false
[url "https://"]
  insteadOf = git://
#-------------------------------------------------------------------------------
# Setup SourceTree to use Kaleidoscope for diffs and merges
[difftool "sourcetree"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
  prompt = false
[mergetool "sourcetree"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
  prompt = false
  keepBackup = false
#-------------------------------------------------------------------------------
# Setup Kaleidoscope to merge and diff the way we want
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
  prompt = false
  keepBackup = false
#-------------------------------------------------------------------------------
# Setup Kaleidoscope as the tool of choice for merging and handling diffs
[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
[merge]
  tool = Kaleidoscope
[mergetool]
  keepBackup = false
  prompt = false
#-------------------------------------------------------------------------------
# Setup custom aliases for Git
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
#-------------------------------------------------------------------------------
